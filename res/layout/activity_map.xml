<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   android:orientation="vertical"
    tools:context="com.xiri.appactivity.MapActivity" >
       <include 
    layout="@layout/ios_status_bar_black"
  
    /> 
      <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/map_padding_bottom"
        android:paddingTop="@dimen/map_padding_bottom" >

        <ImageView
            android:id="@+id/map_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/calendar_padding_bottom"
            android:src="@drawable/share" 
            android:layout_centerVertical="true"
            />

        <EditText
            android:id="@+id/map_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:singleLine="true"
            android:layout_toRightOf="@+id/map_right_turn"
            android:layout_toLeftOf="@+id/map_share"
                        android:layout_marginRight="@dimen/activity_vertical_margin"
            android:layout_marginLeft="@dimen/activity_vertical_margin"
                android:background="@drawable/map_search_shape"        
            android:gravity="center"
android:hint="搜索或输入地址"           
 android:textColor="#000000"
            android:textSize="@dimen/text_size_rightbar" />

        <ImageView
            android:id="@+id/map_right_turn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/calendar_padding_bottom"
            android:gravity="center"
           android:src="@drawable/right_turn"
           android:layout_centerVertical="true"/>
    </RelativeLayout>
    

   <ImageView android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:scaleType="fitXY"
     android:src="@drawable/separator"/> 
   

    <ImageView 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       android:src="@drawable/map_img1" 
       android:scaleType="fitXY"
       android:layout_weight="1"
       android:id="@+id/map_center"/>
    <ImageView android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:scaleType="fitXY"
     android:src="@drawable/separator"/> 
   
       <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/map_padding_bottom"
        android:paddingTop="@dimen/map_padding_bottom" >

        <ImageView
            android:id="@+id/map_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/calendar_padding_bottom"
            android:src="@drawable/detaildisclosure" 
            android:layout_centerVertical="true"
            />


        <ImageView
            android:id="@+id/map_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/calendar_padding_bottom"
            android:gravity="center"
           android:src="@drawable/location"
           android:layout_centerVertical="true"/>
    </RelativeLayout>
    


</LinearLayout>
