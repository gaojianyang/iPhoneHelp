<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <include 
    layout="@layout/ios_status_bar_black"
  
    /> 
 <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/map_padding_bottom"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/map_padding_bottom" >

        <ImageView
            android:id="@+id/calendar_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/search_pink"
            android:layout_centerVertical="true" />
 <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="我的音乐"
            android:textColor="#000000"
            android:textSize="@dimen/text_size_rightbar" />
        <ImageView
            android:id="@+id/calendar_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
android:layout_alignParentLeft="true"            android:src="@drawable/contact_red" />
    </RelativeLayout>
     <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/separator" />
     
     <ImageView 
         
         android:layout_width="match_parent"
         android:layout_height="0dp"
         android:layout_weight="1"
         android:scaleType="fitXY"
         android:id="@+id/music_content"
         />
      <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/separator" />
     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ccffffff"
        android:orientation="horizontal"
        android:id="@+id/phone_bottom"
        android:paddingTop="@dimen/map_padding_bottom"
     >

       
       

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/music_me_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/music_pressed" />

            <TextView
                android:id="@+id/music_me_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/tv_iv_margin"
                android:gravity="center"
                android:text="我的音乐"
                android:textColor="#ff2d55"
                android:textSize="@dimen/text_size_day_name" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/music_queen_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/queen" />

            <TextView
                android:id="@+id/music_queen_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/tv_iv_margin"
                android:gravity="center"
                android:text="播放列表"
                android:textColor="#979797"
                android:textSize="@dimen/text_size_day_name" />
        </LinearLayout>

     
    </LinearLayout>
</LinearLayout>
