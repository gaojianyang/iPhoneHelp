<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <TextView 
        android:layout_marginTop="@dimen/calendar_padding_bottom"
        android:layout_marginBottom="@dimen/calendar_padding_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
           android:text="iCloud"
            android:textColor="#000000"
            android:textSize="@dimen/text_size_month"
            android:layout_gravity="center"
            android:textStyle="bold"/>
   <ImageView android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:scaleType="fitXY"
     android:src="@drawable/separator"/> 
       <LinearLayout 
           android:layout_width="match_parent"
           android:layout_height="0dp"
           android:layout_weight="1"
           android:orientation="vertical"
           android:gravity="center"
           >
           
           <ImageView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@drawable/photo_two_center"
               android:layout_marginBottom="@dimen/activity_top_margin" />
           

           <ImageView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@drawable/photo_two_button"
               android:id="@+id/photo_two_button" />
           
       </LinearLayout>
       

</LinearLayout>
