<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
      android:layout_marginTop="@dimen/activity_top_margin"
    android:orientation="vertical" 
  >
    
  
   <ImageView android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:scaleType="fitXY"
     android:src="@drawable/separator"
   />   
  <LinearLayout 
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
android:padding="@dimen/map_padding_bottom"  
    android:orientation="horizontal"
      
      >
   <ImageView 
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:src="@drawable/set_airplane"
       
       />   
       
            <TextView 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="飞行模式"
                android:textColor="#000000"
                android:textSize="@dimen/text_size_rightbar"
                android:gravity="left"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_gravity="center"
                android:layout_weight="1"
                />

    
  </LinearLayout>   
   <ImageView android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:scaleType="fitXY"
     android:src="@drawable/separator"
     android:layout_marginLeft="@dimen/header_month_height"/>   
     <LinearLayout 
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
android:padding="@dimen/map_padding_bottom"  
android:clickable="true"
android:id="@+id/set_one_wifi"
    android:orientation="horizontal"
      android:background="@drawable/linear_selector"
      >
   <ImageView 
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:src="@drawable/set_wifi"
       
       />   
       
            <TextView 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="无线局域网"
                android:textColor="#000000"
                android:textSize="@dimen/text_size_rightbar"
                android:gravity="left"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_gravity="center"
                android:layout_weight="1"
                />

            <TextView
                android:id="@+id/wifi_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="关闭" 
                android:textColor="#929292"
                android:layout_gravity="center"
                android:textSize="@dimen/text_size_rightbar"
                />
            <ImageView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow36"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_gravity="center"
                />
      
  </LinearLayout>   
  <ImageView android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:scaleType="fitXY"
     android:src="@drawable/separator"
     
     android:layout_marginLeft="@dimen/header_month_height"/>   
     <LinearLayout 
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
android:padding="@dimen/map_padding_bottom"  
    android:orientation="horizontal"
    android:id="@+id/set_one_blue"
    
          android:background="@drawable/linear_selector"
    
      
      >
   <ImageView 
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:src="@drawable/set_bluetooth1"
       
       />   
       
            <TextView 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="蓝牙"
                android:textColor="#000000"
                android:textSize="@dimen/text_size_rightbar"
                android:gravity="left"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_gravity="center"
                android:layout_weight="1"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="关闭" 
                android:textColor="#929292"
                android:layout_gravity="center"
                android:textSize="@dimen/text_size_rightbar"
                />
            <ImageView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow36"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_gravity="center"
                />
      
  </LinearLayout>  
  <ImageView android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:scaleType="fitXY"
     android:src="@drawable/separator"
     android:layout_marginLeft="@dimen/header_month_height"/>   
     <LinearLayout 
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
android:padding="@dimen/map_padding_bottom"  
    android:orientation="horizontal"
          android:background="@drawable/linear_selector"
    android:id="@+id/set_one_moblie"
    
      
      >
   <ImageView 
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:src="@drawable/set_moblie"
       
       />   
       
            <TextView 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="蜂窝移动网络"
                android:textColor="#000000"
                android:textSize="@dimen/text_size_rightbar"
                android:gravity="left"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_gravity="center"
                android:layout_weight="1"
                />

     
            <ImageView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow36"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_gravity="center"
                />
      
  </LinearLayout>   
  <ImageView android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:scaleType="fitXY"
     android:src="@drawable/separator"
     android:layout_marginLeft="@dimen/header_month_height"/>   
     <LinearLayout 
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
android:padding="@dimen/map_padding_bottom"  
    android:orientation="horizontal"
          android:background="@drawable/linear_selector"
    android:id="@+id/set_one_hotspot"
    
      
      >
   <ImageView 
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:src="@drawable/set_hotspot"
       
       />   
       
            <TextView 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="个人热点"
                android:textColor="#000000"
                android:textSize="@dimen/text_size_rightbar"
                android:gravity="left"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_gravity="center"
                android:layout_weight="1"
                />

            <TextView
                
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="关闭" 
                android:textColor="#929292"
                android:layout_gravity="center"
                android:textSize="@dimen/text_size_rightbar"
                />
            <ImageView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow36"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_gravity="center"
                />
      
  </LinearLayout>    
  <ImageView android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:scaleType="fitXY"
     android:src="@drawable/separator"
     android:layout_marginLeft="@dimen/header_month_height"/>   
     <LinearLayout 
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
android:padding="@dimen/map_padding_bottom"  
    android:orientation="horizontal"
            android:background="@drawable/linear_selector"
      android:id="@+id/set_one_sever"
      
      >
   <ImageView 
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:src="@drawable/set_sever"
       
       />   
       
            <TextView 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="运营商"
                android:textColor="#000000"
                android:textSize="@dimen/text_size_rightbar"
                android:gravity="left"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_gravity="center"
                android:layout_weight="1"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="中国移动" 
                android:textColor="#929292"
                android:layout_gravity="center"
                android:textSize="@dimen/text_size_rightbar"
                />
            <ImageView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow36"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_gravity="center"
                />
      
  </LinearLayout>   
  <ImageView android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:scaleType="fitXY"
     android:src="@drawable/separator"
   />  
     
</LinearLayout>
