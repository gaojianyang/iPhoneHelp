<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
     <ImageView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/swipedownindicator"
        android:layout_gravity="center"
        android:layout_margin="5dp"
       />
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp"
        
        >
          <ImageView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/aeroplanemodebutton"
        android:layout_weight="1"/>
             <ImageView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/wifibuttonon"
        android:layout_weight="1"/>
                <ImageView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bluetoothbutton"
        android:layout_weight="1"/>
                   <ImageView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/donotdisturbbutton"
        android:layout_weight="1"/>
                      <ImageView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/lockrotationbutton"
        android:layout_weight="1"/>
        
    </LinearLayout>
       <ImageView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/brightness"
        android:layout_gravity="center"
        android:scaleType="fitXY"
       />
        <ImageView 
            android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/musiccontrols"
        android:layout_gravity="center"
       />
          <ImageView 
            android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/airdrop"
        android:layout_gravity="center"
        android:scaleType="fitXY"

       />
       
<LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        
        >
          <ImageView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/flashlightbutton"
        android:layout_weight="1"/>
             <ImageView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/timerbutton"
        android:layout_weight="1"/>
                <ImageView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/calculatorbutton"
        android:layout_weight="1"/>
                   <ImageView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/camerabutton"
        android:layout_weight="1"/>
            
    </LinearLayout>
    

</LinearLayout>
