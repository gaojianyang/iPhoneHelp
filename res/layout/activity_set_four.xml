<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    
    android:layout_marginTop="@dimen/activity_top_margin"
    android:background="#ffffff"
    
    android:orientation="vertical" >
    
  <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/separator" />

    <LinearLayout
        android:id="@+id/set_four_icloud"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/linear_selector"
        android:orientation="horizontal"
        android:padding="@dimen/map_padding_bottom" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/set_icloud" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_weight="1"
            android:gravity="left"
            android:text="iCloud"
            android:textColor="#000000"
            android:textSize="@dimen/text_size_rightbar" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:src="@drawable/arrow36" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/header_month_height"
        android:scaleType="fitXY"
        android:src="@drawable/separator" />

    <LinearLayout
        android:id="@+id/set_four_app"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/linear_selector"
        android:orientation="horizontal"
        android:padding="@dimen/map_padding_bottom" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/set_app" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_weight="1"
            android:gravity="left"
            android:text="iTunes Store ä¸Ž App Store"
            android:textColor="#000000"
            android:textSize="@dimen/text_size_rightbar" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:src="@drawable/arrow36" />
    </LinearLayout>
     <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/separator" />
</LinearLayout>
